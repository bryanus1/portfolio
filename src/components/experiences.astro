---
import { Image } from "astro:assets";

import box from "@/assets/box.svg";
import mapPin from "@/assets/map-pin.svg";
import calendar from "@/assets/calendar.svg";

interface Props {
  experiences: {
    title: string;
    date: string;
    location: string;
    position: string;
    description: string[];
  }[];
}

const { experiences } = Astro.props as Props;
---

<section
  id="experience"
  class="py-20 bg-gradient-to-br from-blue-50 to-indigo-100 transition-colors duration-300 overflow-hidden relative"
>
  <div class="container mx-auto px-6 relative z-10">
    <h2 class="text-4xl font-bold mb-12 text-center section-title">
      Professional Experience
    </h2>
    <div class="space-y-16">
      {
        experiences.map((experience) => (
          <div class="bg-white p-8 rounded-xl shadow-lg transition-all duration-300 hover:shadow-2xl relative overflow-hidden group experience-card">
            <div
              class="absolute top-0 right-0 w-32 h-32 bg-blue-200 rounded-bl-full z-0 opacity-50
          transition-transform duration-300 group-hover:scale-110"
            />
            <div class="relative z-10">
              <h3 class="text-2xl font-semibold mb-2 flex items-center">
                {experience.title}
              </h3>
              <p class="text-gray-600 mb-4 flex items-center">
                <Image src={mapPin} alt="Location" class="w-4 h-4 mr-2" />
                {experience.location}
              </p>
              <p class="text-gray-600 mb-4 flex items-center">
                <Image src={calendar} alt="Date" class="w-4 h-4 mr-2" />
                {experience.date}
              </p>
              <p class="text-xl font-medium mb-4 flex items-center">
                <Image src={box} alt="Position" class="w-6 h-6 mr-2" />
                {experience.position}
              </p>
              <ul class="list-disc space-y-2">
                {experience.description.map((desc) => (
                  <li class="text-gray-700 flex items-start">
                    <span class="text-blue-500 mr-2">â€¢</span>
                    {desc}
                  </li>
                ))}
              </ul>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
