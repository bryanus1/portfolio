---
import { Image } from "astro:assets";

import mailLogo from "@/assets/mail.svg";
import profile from "@/assets/profile.webp";
import githubLogo from "@/assets/github.svg";
import linkedinLogo from "@/assets/linkedin.svg";

const title = "Brayan Sanjuan";
const subtitle = "MERN Stack Developer";
const description = `Crafting exceptional digital experiences with modern web technologies.
                     Specialized in building scalable full-stack applications using
                     MongoDB, Express.js, React, and Node.js.`;
---

<section
  id="hero"
  class="min-h-screen relative overflow-hidden bg-gradient-to-br from-blue-300 via-white to-rose-300"
>
  <div class="container mx-auto px-6 pt-32 pb-20 relative z-10">
    <div class="flex flex-col lg:flex-row items-center justify-between gap-12">
      <div class="lg:w-1/2 text-center lg:text-left">
        <h1
          class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 bg-clip-text text-transparent bg-gradient-to-r from-blue-500 to-rose-500"
        >
          {title}
        </h1>

        <h2 class="text-2xl md:text-3xl font-semibold mb-6 text-gray-700">
          {subtitle}
        </h2>

        <p
          class="text-lg md:text-xl text-gray-600 mb-8 max-w-2xl mx-auto lg:mx-0"
        >
          {description}
        </p>

        <div class="flex justify-center lg:justify-start space-x-4 mb-8">
          <a
            target="_blank"
            rel="noopener noreferrer"
            href="https://github.com/bryanus1"
            class="p-3 rounded-full bg-white/80 hover:bg-white transition-colors duration-300 shadow-lg hover:shadow-xl"
            aria-label="GitHub Profile"
          >
            <Image src={githubLogo} alt="GitHub Logo" />
          </a>
          <a
            target="_blank"
            rel="noopener noreferrer"
            href="https://www.linkedin.com/in/bryanus1"
            class="p-3 rounded-full bg-white/80 hover:bg-white transition-colors duration-300 shadow-lg hover:shadow-xl"
            aria-label="LinkedIn Profile"
          >
            <Image src={linkedinLogo} alt="LinkedIn Logo" />
          </a>
          <a
            href="mailto:bryan.sj175@gmail.com"
            class="p-3 rounded-full bg-white/80 hover:bg-white transition-colors duration-300 shadow-lg hover:shadow-xl"
            aria-label="Email Contact"
          >
            <Image src={mailLogo} alt="Mail Logo" />
          </a>
        </div>
      </div>

      <div class="lg:w-1/2 hero-image">
        <div class="relative w-72 h-72 md:w-96 md:h-96 mx-auto">
          <div
            class="absolute inset-0 bg-gradient-to-r from-blue-300 to-yellow-100 rounded-3xl transform rotate-6 opacity-50"
          >
          </div>
          <div
            class="absolute inset-0 bg-gradient-to-r from-yellow-100 to-blue-300 rounded-3xl transform -rotate-6 opacity-50"
          >
          </div>
          <div class="relative rounded-2xl overflow-hidden shadow-2xl">
            <Image
              width="384"
              height="384"
              src={profile}
              alt="Brayan Sanjuan"
              class="object-cover w-full h-full"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-content,
  .hero-image,
  .scroll-indicator {
    animation: fadeIn 0.6s ease-out forwards;
  }

  .hero-image {
    animation-delay: 0.2s;
    opacity: 0;
  }

  .scroll-indicator {
    animation-delay: 0.8s;
    opacity: 0;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .learn-more-btn {
    transition: transform 0.2s;
  }

  .learn-more-btn:hover {
    transform: scale(1.05);
  }

  .learn-more-btn:active {
    transform: scale(0.95);
  }
</style>
